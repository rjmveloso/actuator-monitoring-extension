<?xml version="1.0" encoding="UTF-8"?>

<monitor>
    <name>MicrometerMonitor</name>
    <type>managed</type>
    <enabled>true</enabled>
    <description>Monitors Elasticsearch</description>
    <monitor-configuration></monitor-configuration>
    <monitor-run-task>
        <execution-style>periodic</execution-style>
        <execution-frequency-in-seconds>60</execution-frequency-in-seconds>
        <name>Actuator Monitor Run Task</name>
        <display-name>Actuator Monitor Task</display-name>
        <description>Actuator Monitor Task</description>
        <type>java</type>
        <execution-timeout-in-secs>60</execution-timeout-in-secs>
        <task-arguments>
            <argument name="config-file" is-required="true" default-value="monitors/MicrometerMonitor/config.yml"/>
        </task-arguments>
        <java-task>
            <classpath>actuator-monitoring-extension.jar</classpath>
            <impl-class>io.github.appdynamics.extensions.micrometer.MicrometerMonitor</impl-class>
        </java-task>
    </monitor-run-task>
</monitor>